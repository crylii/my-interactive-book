body {
  background: #111;
}

#book {
  width: 800px;
  height: 500px;
  margin: auto;
}

.page {
  position: relative;
}

.page-bg {
  width: 100%;
  height: 100%;
}

.interactive {
  position: absolute;
  width: 120px;
  top: 200px;
  left: 300px;
  cursor: pointer;
}
const item = document.querySelector('.interactive');

item.addEventListener('click', () => {
  item.classList.toggle('move');
});
.move {
  transform: rotate(20deg) scale(1.2);
  transition: 0.4s;
}
let isDragging = false;
let offsetX, offsetY;

item.addEventListener('mousedown', (e) => {
  isDragging = true;
  offsetX = e.offsetX;
  offsetY = e.offsetY;
});

document.addEventListener('mousemove', (e) => {
  if (!isDragging) return;
  item.style.left = e.pageX - offsetX + 'px';
  item.style.top = e.pageY - offsetY + 'px';
});

document.addEventListener('mouseup', () => {
  isDragging = false;
});

